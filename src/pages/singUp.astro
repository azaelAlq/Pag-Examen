<div
  class="h-screen bg-gradient-to-br from-bgPrincipal to-hoverBoton flex justify-center items-center w-full"
>
  <form method="POST" action="#">
    <div class="bg-bgBlanco px-10 py-8 rounded-xl w-screen shadow-xl max-w-sm">
      <div class="space-y-4">
        <h1 class="text-center text-2xl font-semibold text-titulos">Login</h1>
        <hr />
        <div
          class="flex items-center border-2 border-borderAcento py-2 px-3 rounded-md mb-4"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-textoAcento"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
            ></path>
          </svg>
          <input
            class="pl-2 outline-none border-none w-full text-textoAcento"
            type="email"
            name="email"
            value=""
            placeholder="Email"
            required
          />
        </div>
        <div
          class="flex items-center border-2 border-borderAcento py-2 px-3 rounded-md"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-textoAcento"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
              clip-rule="evenodd"></path>
          </svg>
          <input
            class="pl-2 outline-none border-none w-full text-textoAcento"
            type="password"
            name="password"
            id=""
            placeholder="Password"
            required
          />
        </div>
      </div>
      <!-- Remember Me checkbox -->
      <div class="flex justify-center items-center mt-4">
        <p
          class="inline-flex items-center text-textoAcento font-medium text-xs text-center"
        >
          <input
            type="checkbox"
            id="rememberMeCheckbox"
            name="rememberMe"
            class="mr-2"
          />
          <span class="text-xs font-semibold">Remember me?</span>
        </p>
      </div>
      <button
        type="submit"
        value="login"
        id="login"
        class="mt-6 w-full shadow-xl bg-bgPrincipal hover:bg-hoverBoton text-textoClaro py-2 rounded-md text-lg tracking-wide transition duration-300"
      >
        Login
      </button>
      <hr />
      <div class="flex justify-center items-center mt-4">
        <p
          class="inline-flex items-center text-textoAcento font-medium text-xs text-center"
        >
          <span class="ml-2"
            >You don't have an account?
            <a
              href="login"
              class="text-xs ml-2 text-borderAcento font-semibold hover:text-hoverBoton"
              >Register now &rarr;</a
            >
          </span>
        </p>
      </div>
    </div>
    <div class="pt-6 text-base font-semibold leading-7">
      <p class="font-sans text-titulos text-md hover:text-hoverBoton">
        <a href="/" class="">&larr; Home</a>
      </p>
    </div>
  </form>
</div>
